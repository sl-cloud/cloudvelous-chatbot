# Database Configuration
POSTGRES_PASSWORD=your_secure_password_here_change_me
DATABASE_URL=postgresql://chatbot_user:your_secure_password_here_change_me@localhost:5432/cloudvelous_chatbot

# LLM API Keys
OPENAI_API_KEY=sk-your-openai-api-key-here
GEMINI_API_KEY=your-gemini-api-key-here

# GitHub Configuration
GITHUB_TOKEN=ghp_your_github_token_here

# Admin Authentication
ADMIN_JWT_SECRET=your-jwt-secret-minimum-32-characters-long-change-me
ADMIN_API_KEY=your-admin-api-key-change-me
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Embedding Model Configuration
EMBED_MODEL=all-MiniLM-L6-v2

# LLM Provider Configuration
LLM_PROVIDER=openai
# Options: openai, gemini

# Workflow Learning Configuration
WORKFLOW_EMBEDDING_ENABLED=true
WORKFLOW_SIMILARITY_WEIGHT=0.3
FEEDBACK_THRESHOLD_FOR_RETRAIN=50
MIN_WORKFLOW_CLUSTER_SIZE=3

# Accuracy Tuning
CHUNK_WEIGHT_ADJUSTMENT_RATE=0.1
MIN_CHUNK_WEIGHT=0.5
MAX_CHUNK_WEIGHT=2.0

# Retrieval Configuration
TOP_K_RETRIEVAL=5
ALLOWED_QUESTION_SIMILARITY_THRESHOLD=0.85
WORKFLOW_BOOST_FACTOR=1.2

# Server Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

