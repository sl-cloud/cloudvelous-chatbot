# Database Configuration
POSTGRES_PASSWORD=your_secure_password_here_change_me
DATABASE_URL=postgresql://chatbot_user:your_secure_password_here_change_me@localhost:5432/cloudvelous_chatbot

# LLM API Keys
OPENAI_API_KEY=sk-your-openai-api-key-here
GEMINI_API_KEY=your-gemini-api-key-here

# GitHub Configuration
GITHUB_TOKEN=ghp_your_github_token_here

# Admin Authentication
ADMIN_JWT_SECRET=your-jwt-secret-minimum-32-characters-long-change-me
ADMIN_API_KEY=your-admin-api-key-change-me
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Embedding Model Configuration
EMBED_MODEL=all-MiniLM-L6-v2

# LLM Provider Configuration
LLM_PROVIDER=openai
# Options: openai, gemini

# Workflow Learning Configuration
WORKFLOW_EMBEDDING_ENABLED=true
WORKFLOW_SIMILARITY_WEIGHT=0.3
FEEDBACK_THRESHOLD_FOR_RETRAIN=50
MIN_WORKFLOW_CLUSTER_SIZE=3

# Accuracy Tuning
CHUNK_WEIGHT_ADJUSTMENT_RATE=0.1
MIN_CHUNK_WEIGHT=0.5
MAX_CHUNK_WEIGHT=2.0

# Retrieval Configuration
TOP_K_RETRIEVAL=5
ALLOWED_QUESTION_SIMILARITY_THRESHOLD=0.85
WORKFLOW_BOOST_FACTOR=1.2

# Server Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# CORS Configuration (Phase 3)
# For development, use "*" to allow all origins
# For production, specify comma-separated origins: http://localhost:3000,https://yourdomain.com
CORS_ORIGINS=*
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_HEADERS=Content-Type,Authorization,X-API-Key,X-Request-ID

# Logging Configuration (Phase 3)
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_JSON=false
# Set to true for production (structured JSON logs)

# Admin Configuration (Phase 3)
SESSION_LIST_PAGE_SIZE=20
# Maximum number of sessions per page in admin list
MAX_BULK_FEEDBACK_SIZE=100
# Maximum number of feedback items in bulk submission

# pgAdmin Configuration (Optional)
PGADMIN_DEFAULT_EMAIL=admin@example.com
PGADMIN_DEFAULT_PASSWORD=admin

